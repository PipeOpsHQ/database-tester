# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USERNAME=root
MYSQL_PASSWORD=password
